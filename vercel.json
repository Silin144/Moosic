{
  "version": 2,
  "builds": [
    {
      "src": "application.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "15mb",
        "runtime": "python3.9"
      }
    },
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/login",
      "dest": "/application.py"
    },
    {
      "src": "/api/check-auth",
      "dest": "/application.py"
    },
    {
      "src": "/api/callback",
      "dest": "/application.py"
    },
    {
      "src": "/api/logout",
      "dest": "/application.py"
    },
    {
      "src": "/api/me",
      "dest": "/application.py"
    },
    {
      "src": "/api/create-playlist",
      "dest": "/application.py"
    },
    {
      "src": "/api/(.*)",
      "dest": "/application.py"
    },
    {
      "src": "/(.*)",
      "dest": "/dist/index.html",
      "headers": {
        "Cache-Control": "no-cache, no-store, must-revalidate"
      }
    }
  ],
  "env": {
    "PYTHONPATH": ".",
    "FLASK_APP": "application.py",
    "FLASK_ENV": "production"
  }
}