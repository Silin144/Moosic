# Environment
VERCEL_ENV=development # or 'production' for production environment

# URLs (optional, will be set based on environment)
FRONTEND_URL=http://localhost:5173
BACKEND_URL=http://localhost:3001

# Spotify Configuration (required)
SPOTIFY_CLIENT_ID=your_spotify_client_id
SPOTIFY_CLIENT_SECRET=your_spotify_client_secret
# In development:
SPOTIFY_REDIRECT_URI=http://localhost:3001/api/callback
# In production:
# SPOTIFY_REDIRECT_URI=https://moosic-liart.vercel.app/api/callback

# OpenAI Configuration (required)
OPENAI_API_KEY=your_openai_api_key

# Server Configuration (optional)
PORT=3001

